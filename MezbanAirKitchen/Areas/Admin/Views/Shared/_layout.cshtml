<!DOCTYPE html>
<html lang="en" style="height:auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title  - Mezban Oder Food Online</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/Assets/backend/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link href="~/Assets/backend/dist/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="/Assets/backend/dist/css/adminlte.min.css">
    <link href="~/Assets/backend/dist/css/admin/admin.css" rel="stylesheet" />
    <link href="~/Assets/backend/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <!-- Data Table -->
    <link rel="stylesheet" href="/Assets/backend/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link href="~/Assets/backend/plugins/datatables-checkbox/css/dataTables.checkboxes.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    @RenderSection("Styles", false)
    <script src="/Assets/backend/plugins/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand nav-blue navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars text-white"></i></a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-light-primary elevation-4">
            <a href="" class="brand-link nav-blue">
                <img src="/Assets/backend/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light text-white">Admin</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/Assets/backend/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Alexander Pierce</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @Html.Partial("_sidebar")
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a href="http://adminlte.io"></a>Mezban.</strong>
            All rights reserved.
        </footer>
    </div>
    <script src="/Assets/backend/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/backend/plugins/select2/js/select2.min.js"></script>
    <script src="/Assets/backend/dist/js/adminlte.js"></script>
    <script src="/Assets/backend/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/Assets/backend/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Assets/backend/plugins/datatables-checkbox/js/dataTables.checkboxes.min.js"></script>
    <script src="~/Assets/backend/plugins/datatables-checkbox/js/dataTables.checkboxes.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>